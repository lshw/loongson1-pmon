machine        LS232_sm502        mips    # CPU Architecture, Platform
config          pmon 

#
#  Define target endian
#
makeoptions	ENDIAN=EL		# Little endian version.


#include "conf/GENERIC_ALL"

#
# System Name and Target Name
#
